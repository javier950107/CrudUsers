@model List<User>

<h1>Users</h1>

<p>
    <a asp-action="Create" class="btn btn-success">New User</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>User</th>
            <th>Email</th>
            <th>Options</th>
        </tr>
    </thead>
    <tbody>
            @foreach(var user in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(item => user.id)
                    </td>
                    <td>
                        @Html.DisplayFor(item => user.name)
                    </td>
                    <td>
                        @Html.DisplayFor(item => user.email)
                    </td>
                    <td>
                        <a asp-action="Edit" class="btn btn-warning" asp-route-id="@user.id">Edit</a>
                        <a asp-action="Delete" class="btn btn-success" asp-rout-id="@user.id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
</table>